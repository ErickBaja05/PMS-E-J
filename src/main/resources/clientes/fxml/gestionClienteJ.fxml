                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </Button>
                        <Button fx:id="btnDarAltaJ" mnemonicParsing="false" onAction="#darAltaClienteJ" prefHeight="45.0" prefWidth="130.0" styleClass="btnAccion" text="DAR DE ALTA">
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </Button>
                        <Button fx:id="btnDarBajaJ" mnemonicParsing="false" onAction="#darBajaClienteJ" prefHeight="45.0" prefWidth="130.0" styleClass="btnAccion" text="DAR DE BAJA">
