                                <TextField fx:id="txtDireccionJ" prefHeight="35.0" promptText="Calle Principal y Secundaria" styleClass="textField" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <Label maxWidth="Infinity" styleClass="lblInformacion" text="Teléfono Celular">
                                    <padding><Insets left="5.0" /></padding>
                                </Label>
                                <TextField fx:id="txtCelularJ" prefHeight="35.0" promptText="09XXXXXXXX" styleClass="textField" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.rowIndex="2" />
                    </children>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="15.0" VBox.vgrow="ALWAYS">
                    <children>
