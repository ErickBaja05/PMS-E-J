                                    <padding><Insets left="5.0" /></padding>
                                </Label>
                                <TextField fx:id="txtCorreoJ" prefHeight="35.0" promptText="ejemplo@correo.com" styleClass="textField" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
