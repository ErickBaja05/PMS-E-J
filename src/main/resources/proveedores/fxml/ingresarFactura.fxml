<AnchorPane prefHeight="682.0" prefWidth="1016.0" stylesheets="@../css/ingresarFacturaStyles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupo2.PMSEYJ.proveedores.controller.ingresarFacturaController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <children>

                <VBox prefHeight="57.0" prefWidth="986.0" spacing="10.0" styleClass="card-base, card-header">
                    <children>
                        <Label text="Registro de Factura de Compra">
                            <font><Font name="System Bold" size="20.0" /></font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <Label text="Número de Factura:">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <TextField fx:id="txtNumFactura" prefHeight="35.0" prefWidth="250.0" promptText="Factura del proveedor" />
                        <Button fx:id="btnValidarFactura" onAction="#handleValidarFactura" prefHeight="27.0" prefWidth="131.0" styleClass="btn-agregar" text="Validar">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="15.0" styleClass="card-base, card-form">
                    <children>
                        <Label styleClass="label-subtitulo" text="Datos del Producto y Lote">
                            <font><Font name="System Bold" size="16.0" /></font>
                        </Label>
                        <GridPane hgap="10.0" prefHeight="150.0" prefWidth="882.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="15.0" minHeight="5.600006103515625" prefHeight="13.600000000000001" vgrow="SOMETIMES" />
                                <RowConstraints maxHeight="25.0" minHeight="8.99998779296875" prefHeight="32.00002746582031" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="15.0" minHeight="10.0" prefHeight="15.000021362304686" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="25.0" minHeight="10.0" prefHeight="66.19997863769532" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <TextField fx:id="txtCodAuxiliar" prefHeight="35.0" promptText="Cód. Auxiliar" GridPane.rowIndex="1" />
                                <TextField fx:id="txtLote" prefHeight="35.0" promptText="Lote (Entero +)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <DatePicker fx:id="dpVencimiento" prefHeight="35.0" prefWidth="Infinity" promptText="Fecha Vencimiento" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                <TextField fx:id="txtPrecioCompra" prefHeight="35.0" promptText="Precio Compra ($)" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                <TextField fx:id="txtRentabilidad" prefHeight="35.0" prefWidth="228.0" promptText="\% Rentabilidad" GridPane.rowIndex="3" />
                                <TextField fx:id="txtCantCajas" prefHeight="34.0" prefWidth="228.0" promptText="Cajas Compradas" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Button fx:id="btnAgregarItem" onAction="#handleAgregarProducto" prefHeight="40.0" prefWidth="Infinity" styleClass="btn-agregar" text="AGREGAR PRODUCTO" GridPane.columnIndex="3" GridPane.rowIndex="3">
                                    <font><Font name="System Bold" size="13.0" /></font>
                                </Button>
                        <Label styleClass="label-subtitulo" text="Código Auxiliar del Producto">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="7.0" styleClass="label-subtitulo" text="Lote" GridPane.columnIndex="1">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="251.0" layoutY="7.0" styleClass="label-subtitulo" text="Precio de Compra" GridPane.columnIndex="3">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="251.0" layoutY="12.0" styleClass="label-subtitulo" text="Fecha de Vencimiento" GridPane.columnIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="8.0" styleClass="label-subtitulo" text="Porcentaje de Rentabilidad" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="8.0" styleClass="label-subtitulo" text="Cajas Compradas" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="10.0" layoutY="8.0" styleClass="label-subtitulo" GridPane.columnIndex="2" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                            </children>
                        </GridPane>
                    </children>
                </VBox>

                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <children>
                        <TableView fx:id="tvDetalleFactura" prefHeight="300.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colProducto" prefWidth="344.80000323057175" text="Código Auxiliar del Producto" />
                                <TableColumn fx:id="colLote" prefWidth="100.0" text="Lote" />
                                <TableColumn fx:id="colVencimiento" prefWidth="140.0" text="Fecha de Vencimiento" />
                                <TableColumn fx:id="colPrecioCompra" prefWidth="80.00006103515625" text="Costo" />
                                <TableColumn fx:id="colCajas" text="Cajas" />
                                <TableColumn fx:id="colSubtotal" prefWidth="120.0" text="Precio de Venta" />
                            </columns>
                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="20.0" styleClass="card-base, card-footer">
                    <children>
                        <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="label-nota" text="Nota: Al guardar se actualizará el stock y el precio de venta.">
                                    <font><Font name="System Italic" size="12.0" /></font>
                                </Label>
                            </children>
                        </VBox>
                        <Button fx:id="btnGuardarFactura" onAction="#handleGuardarFactura" prefHeight="50.0" prefWidth="280.0" styleClass="btn-guardar" text="GUARDAR FACTURA Y STOCK">
                            <font><Font name="System Bold" size="15.0" /></font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
