<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="682.0" prefWidth="1016.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupo2.PMSEYJ.proveedores.controller.definirContactoProveedoresController">
    <children>
        <VBox layoutX="50.0" layoutY="50.0" spacing="25.0" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-color: #e0e0e0; -fx-border-radius: 15;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Definir Contacto de Proveedor">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Ingrese la información del nuevo proveedor para su registro en el sistema." textFill="#707070">
                            <font>
                                <Font size="15.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <VBox spacing="15.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Nombre del Proveedor">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtNombre" prefHeight="40.0" prefWidth="400.0" promptText="Ej: Distribuidora Farmacéutica" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Número de Teléfono">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtTelefono" prefHeight="40.0" prefWidth="400.0" promptText="10 dígitos numéricos" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Correo Electrónico">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="txtCorreo" prefHeight="40.0" prefWidth="400.0" promptText="ejemplo@proveedor.com" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#registrarProveedor" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="REGISTRAR PROVEEDOR">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelarOperacion" prefHeight="45.0" prefWidth="150.0" text="CANCELAR">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                    </children>
                </HBox>

                <Label fx:id="lblMensaje" wrapText="true">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</AnchorPane>
