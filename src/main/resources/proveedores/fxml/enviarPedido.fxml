<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="700.0" stylesheets="@../css/enviarPedidoStyles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupo2.PMSEYJ.proveedores.controller.enviarPedidoController">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="label-titulo" text="Reporte de EnvÃ­o de Pedido">
                            <font><Font name="System Bold" size="22.0" /></font>
                        </Label>
                        <Label styleClass="label-subtitulo" text="Revise los productos y seleccione un proveedor para finalizar." />
                    </children>
                </VBox>

                <TableView fx:id="tvReporte" prefHeight="250.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNombre" prefWidth="400.0" text="Nombre del Producto" />
                        <TableColumn fx:id="colCantidad" prefWidth="200.0" text="Cantidad Solicitada" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>

                <VBox spacing="10.0" styleClass="card-seleccion">
                    <children>
                        <Label text="Seleccionar Nombre del Proveedor:">
                            <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <ComboBox fx:id="cmbProveedores" prefHeight="40.0" prefWidth="400.0" promptText="Elija un proveedor registrado..." />
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                    <children>
                        <Button fx:id="btnCancelar" onAction="#handleCancelar" prefHeight="45.0" prefWidth="120.0" styleClass="btn-cancelar" text="CANCELAR" />
                        <Button fx:id="btnConfirmarEnvio" onAction="#handleConfirmarEnvio" prefHeight="45.0" prefWidth="220.0" styleClass="btn-confirmar" text="CONFIRMAR Y ENVIAR">
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>