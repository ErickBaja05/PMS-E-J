<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="682.0" prefWidth="1016.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupo2.PMSEYJ.administracion.gestionParametros.controller.definirPromocionController">
    <children>
        <VBox alignment="TOP_LEFT" layoutX="50.0" layoutY="50.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-color: #e0e0e0; -fx-border-radius: 15;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Definir Nueva Promoción">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Complete los campos para registrar una promoción en el sistema." textFill="#707070" />
                    </children>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Producto">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <TextField fx:id="txtCodigoProducto" prefHeight="40.0" prefWidth="350.0" promptText="Ingrese el código del producto (Ej: PROD-102)">
                           <cursor>
                              <Cursor fx:constant="TEXT" />
                           </cursor></TextField>
                        <Button fx:id="btValidar" mnemonicParsing="false" onAction="#validarProducto" prefHeight="38.0" prefWidth="125.0" text="Validar">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Label text="Condiciones o Reglas de la Promoción">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="txtCondiciones" prefHeight="100.0" prefWidth="200.0" promptText="Describa las reglas aplicables (Ej: 2x1 en unidades seleccionadas)" wrapText="true">
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor></TextArea>
                    </children>
                </VBox>

                <HBox spacing="40.0">
                    <children>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Fecha de Inicio">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="dpFechaInicio" prefHeight="40.0" prefWidth="250.0" promptText="Seleccione fecha">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></DatePicker>
                            </children>
                        </VBox>
                        <VBox spacing="10.0">
                            <children>
                                <Label text="Fecha de Fin">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <DatePicker fx:id="dpFechaFin" prefHeight="40.0" prefWidth="250.0" promptText="Seleccione fecha">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></DatePicker>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#registrarPromocion" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-cursor: hand;" text="REGISTRAR PROMOCIÓN">
                                    <font>
                                        <Font name="System Bold" size="13.0" />
                                    </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                                </Button>
                                <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#cancelarOperacion" prefHeight="45.0" prefWidth="150.0" text="CANCELAR">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor></Button>
                            </children>
                        </HBox>
                        <Label fx:id="lblMensaje" wrapText="true">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
