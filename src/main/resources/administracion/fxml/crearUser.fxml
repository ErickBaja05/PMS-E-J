         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Label>
      <ComboBox fx:id="ComboBTipoUser" prefHeight="37.0" prefWidth="216.0" promptText="Escoja tipo de usuario" styleClass="text-field" />
      <HBox alignment="BOTTOM_LEFT" prefHeight="30.0" prefWidth="933.0">
         <children>
            <Label styleClass="lblSubtitulo" text="NOMBRE DE USUARIO:" />
         </children>
      </HBox>
      <HBox prefHeight="41.0" prefWidth="933.0">
         <children>
      
              <!-- CAMPOS -->
              <TextField fx:id="txtUsuario" maxWidth="-Infinity" prefHeight="40" prefWidth="826.0" promptText="Ingrese el nombre de usuario" styleClass="textField" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_LEFT" prefHeight="30.0" prefWidth="933.0">
         <children>
            <Label styleClass="lblSubtitulo" text="CORREO ELECTRÓNICO:" />
         </children>
      </HBox>
      <HBox prefHeight="42.0" prefWidth="933.0">
         <children>
      
              <TextField fx:id="txtCorreo" maxWidth="-Infinity" prefHeight="40.0" prefWidth="829.0" promptText="Ingrese el correo electrónico" styleClass="textField" />
         </children>
      </HBox>
      <HBox alignment="BOTTOM_LEFT" prefHeight="30.0" prefWidth="933.0">
         <children>
            <Label styleClass="lblSubtitulo" text="CONTRASEÑA:" />
         </children>
      </HBox>
      <HBox prefHeight="42.0" prefWidth="933.0" spacing="20.0">
         <children>
      
              <PasswordField fx:id="passFieldPassword" maxWidth="-Infinity" prefHeight="54.0" prefWidth="829.0" promptText="Ingrese la contraseña" styleClass="textField" />
            <TextField fx:id="textFieldPassword" prefHeight="42.0" prefWidth="829.0" promptText="Ingrese la contraseña" styleClass="textField" />
            <Button fx:id="verPassword" mnemonicParsing="false" styleClass="botonVer" />
         </children>
      </HBox>

              <!-- BOTONES -->
        <HBox alignment="CENTER" maxWidth="-Infinity" prefHeight="0.0" prefWidth="764.0" spacing="20">
            <Button fx:id="butCrearUser" onAction="#crearUsuario" prefHeight="38.0" prefWidth="228.0" styleClass="btn" text="CREAR USUARIO" textAlignment="CENTER">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor>
            <HBox.margin>
               <Insets top="20.0" />
            </HBox.margin>
         </Button>
        </HBox>

        <!-- MENSAJES -->
        <Label fx:id="lblMensaje" maxWidth="1102.0" prefHeight="109.0" prefWidth="933.0" textAlignment="CENTER" wrapText="true" />
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>

    </VBox>
   <stylesheets>
      <URL value="@../css/crearUsuario.css" />
