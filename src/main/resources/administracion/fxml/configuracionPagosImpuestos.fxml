<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="682.0" prefWidth="1016.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupo2.PMSEYJ.administracion.gestionParametros.controller.configuracionPagosImpuestosController">
    <children>
        <VBox layoutX="50.0" layoutY="50.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-color: #e0e0e0; -fx-border-radius: 15;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label text="Configuración de Pagos e Impuestos">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <VBox spacing="10.0" style="-fx-padding: 15; -fx-border-color: #eeeeee; -fx-border-radius: 10;">
                    <children>
                        <Label text="Definir Valor de IVA">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <TextField fx:id="txtValorIVA" prefHeight="40.0" prefWidth="250.0" promptText="Ingrese valor (ej: 15.0)" />
                                <Button fx:id="btnRegistrarIVA" mnemonicParsing="false" onAction="#definirIVA" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="REGISTRAR IVA">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Gestión de Métodos de Pago">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <HBox spacing="15.0">
                            <children>
                                <TextField fx:id="txtNombrePago" prefHeight="40.0" prefWidth="350.0" promptText="Nombre del método de pago (ej: Efectivo)" />
      
                              <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="290.0" spacing="15.0">
                                  <children>
                                      <Button fx:id="btnHabilitar" mnemonicParsing="false" onAction="#habilitarMetodo" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="HABILITAR">
                                          <font>
                                              <Font name="System Bold" size="13.0" />
                                          </font>
                                          <cursor>
                                              <Cursor fx:constant="HAND" />
                                          </cursor>
                                      </Button>
                                      <Button fx:id="btnDeshabilitar" mnemonicParsing="false" onAction="#deshabilitarMetodo" prefHeight="45.0" prefWidth="180.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="DESHABILITAR">
                                          <font>
                                              <Font name="System Bold" size="13.0" />
                                          </font>
                                          <cursor>
                                              <Cursor fx:constant="HAND" />
                                          </cursor>
                                      </Button>
                                  </children>
                              </HBox>
                            </children>
                        </HBox>

                        <TableView fx:id="tablaMetodosPago" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colNombre" prefWidth="450.0" text="Método de Pago" />
                                <TableColumn fx:id="colEstado" prefWidth="450.0" text="Estado Actual" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
