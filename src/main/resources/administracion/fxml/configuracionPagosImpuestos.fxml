<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="682.0" prefWidth="1016.0" stylesheets="@../css/configuracionPagosStyles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.grupo2.PMSEYJ.administracion.gestionParametros.controller.configuracionPagosImpuestosController">
    <children>
        <VBox layoutX="50.0" layoutY="50.0" spacing="20.0" styleClass="card-main" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="label-header" text="Configuración de Pagos e Impuestos">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <VBox spacing="15.0" styleClass="section-box">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label styleClass="label-subheader" text="Definir Valor de IVA">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <children>
                                <TextField fx:id="txtValorIVA" prefHeight="40.0" prefWidth="250.0" promptText="Ingrese un número decimal ej: 15.0" styleClass="input-field" />

                                <Button fx:id="btnRegistrarIVA" mnemonicParsing="false" onAction="#definirIVA" prefHeight="40.0" prefWidth="160.0" styleClass="btn-update" text="ACTUALIZAR IVA">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>

                                <HBox alignment="CENTER_LEFT" spacing="8.0" styleClass="status-box-blue">
                                    <children>
                                        <Label styleClass="label-status-blue" text="Valor Actual de IVA:">
                                            <font><Font name="System Bold" size="12.0" /></font>
                                        </Label>
                                        <Label fx:id="lblIvaActual" styleClass="label-status-blue" text="---">
                                            <font><Font name="System Bold" size="15.0" /></font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                    <children>
                        <Label styleClass="label-subheader" text="Gestión de Métodos de Pago">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <HBox spacing="15.0">
                            <children>
                                <TextField fx:id="txtNombrePago" prefHeight="45.0" prefWidth="350.0" promptText="Nombre del método de pago (ej: Transferencia)" styleClass="input-field" />

                                <HBox alignment="CENTER_RIGHT" spacing="15.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Button fx:id="btnHabilitar" mnemonicParsing="false" onAction="#habilitarMetodo" prefHeight="45.0" prefWidth="150.0" styleClass="btn-success" text="HABILITAR">
                                            <font>
                                                <Font name="System Bold" size="13.0" />
                                            </font>
                                        </Button>
                                        <Button fx:id="btnDeshabilitar" mnemonicParsing="false" onAction="#deshabilitarMetodo" prefHeight="45.0" prefWidth="150.0" styleClass="btn-danger" text="DESHABILITAR">
                                            <font>
                                                <Font name="System Bold" size="13.0" />
                                            </font>
                                        </Button>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>

                        <TableView fx:id="tablaMetodosPago" prefHeight="200.0" prefWidth="200.0" styleClass="table-view-rounded" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colNombre" prefWidth="450.0" text="Método de Pago" />
                                <TableColumn fx:id="colEstado" prefWidth="450.0" text="Estado Actual" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>